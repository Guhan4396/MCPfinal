{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "pip install -r requirements.txt && next build",
  "installCommand": "pnpm install",
  "outputDirectory": ".next",
  "routes": [
    {
      "src": "/api/calculate",
      "dest": "/api/calculate"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  }
}

